{
  "name": "poly-crypto",
  "version": "2.0.0",
  "description": "High-level cryptographic functions that are interoperable between NodeJS and PHP 7.1+.",
  "main": "index.js",
  "scripts": {
    "test": "npx jest",
    "coverage": "npx jest --collectCoverage",
    "test:php": "./vendor/bin/kahlan --spec=tests",
    "test:all": "./vendor/bin/kahlan --spec=tests && npm test"
  },
  "bin": {
    "key:encrypt": "node ./cli/aes-key-encrypt.js",
    "pass:encrypt": "node ./cli/aes-pass-encrypt.js",
    "key:decrypt": "node ./cli/aes-key-decrypt.js",
    "pass:decrypt": "node ./cli/aes-pass-decrypt.js",
    "bcrypt:hash": "node ./cli/bcrypt-hash.js",
    "bcrypt:verify": "node ./cli/bcrypt-verify.js",
    "dig:md5": "node ./cli/digest.js md5",
    "dig:sha1": "node ./cli/digest.js sha1",
    "dig:sha256": "node ./cli/digest.js sha256",
    "dig:sha512": "node ./cli/digest.js sha512",
    "rand:bytes": "node ./cli/rand.js bytes",
    "rand:hex": "node ./cli/rand.js hex",
    "rand:slug": "node ./cli/rand.js slug",
    "rand:fax": "node ./cli/rand.js fax",
    "rand:string": "node ./cli/rand-string.js"
  },
  "keywords": [
    "encryption",
    "decryption",
    "encrypt",
    "decrypt",
    "AES",
    "AES-256",
    "AES256",
    "AES-256-GCM",
    "AES256GCM",
    "GCM",
    "bcrypt",
    "md5",
    "sha1",
    "sha256",
    "sha512",
    "hash",
    "digest",
    "slug",
    "symmetric",
    "cipher",
    "ciphertext",
    "crypto",
    "cryptography",
    "Node",
    "NodeJS",
    "node-forge",
    "PHP",
    "openssl",
    "random",
    "urandom"
  ],
  "author": "Ken Snyder",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "node-forge": "^0.10.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  }
}
